<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="KillUI.AlertPopup">
    <VerticalStackLayout>
        <Label  
            Text=" Kill the UI Alert " BackgroundColor="White" TextColor="Black" FontSize="Medium"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Button Text="Continue" BackgroundColor="Red" TextColor="White" FontSize="Body"
                Clicked="OnContinueStartAlert"/>
    </VerticalStackLayout>
</toolkit:Popup>