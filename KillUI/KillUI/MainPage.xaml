<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KillUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description=".NET!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Hello UI Killers"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to the Alert UI Killer App"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to Kill the UI"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="StartBtn"
                Text="Start"
                Clicked="OnStartClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
